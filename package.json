{
  "publisher": "Ripwords",
  "name": "waterminder",
  "displayName": "Waterminder",
  "type": "module",
  "version": "0.1.3",
  "repository": "https://github.com/Ripwords/waterminder",
  "private": true,
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.cjs",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.89.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [],
    "configuration": {
      "title": "Waterminder",
      "properties": {
        "waterminder.message": {
          "type": "string",
          "default": "Waterminder: Drink some water!",
          "description": "The message to show in the notification"
        },
        "waterminder.interval": {
          "type": "number",
          "default": 15,
          "description": "The interval in minutes to show the notification"
        },
        "waterminder.amountPerNotification": {
          "type": "number",
          "default": 200,
          "description": "The amount in milliliters to drink per notification"
        },
        "waterminder.goal": {
          "type": "number",
          "default": 2000,
          "description": "The goal in milliliters"
        },
        "waterminder.focused": {
          "type": "boolean",
          "default": false,
          "description": "Whether to only show the notification when the editor is focused"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup --env.NODE_ENV production --treeshake",
    "dev": "tsup --watch ./src --env.NODE_ENV development",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "reactive-vscode": "^0.2.0-beta.3",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  }
}